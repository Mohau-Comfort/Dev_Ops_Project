# ============================================
# Development Environment Configuration
# Used with docker-compose.dev.yml + Neon Local
# ============================================

# -----------------------------------------
# Server Configuration
# -----------------------------------------
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# -----------------------------------------
# Neon Local Configuration
# Required for ephemeral branch creation
# -----------------------------------------
# Get your API key from: https://console.neon.tech/app/settings/api-keys
NEON_API_KEY=napi_3uf34yohmexhakm40dwspsn443wiyg1pz6x6q1dg7yghazik6srj18m5j13uls3f

# Get your project ID from your Neon dashboard
NEON_PROJECT_ID=falling-wind-04464128

# Optional: Parent branch ID to create ephemeral branches from
# Leave empty to use the default branch
PARENT_BRANCH_ID=br-frosty-bush-aha47qi3

# Delete ephemeral branch when container stops (default: true)
DELETE_BRANCH=true

# -----------------------------------------
# Database Configuration
# Note: When running in Docker, this is overridden in docker-compose.dev.yml
# to use the internal network hostname (neon-local instead of localhost)
# -----------------------------------------
DATABASE_URL=postgres://neon:npg@localhost:5432/neondb?sslmode=require

# -----------------------------------------
# Security Configuration
# -----------------------------------------
# Arcjet key (optional for local development)
