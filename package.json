{
  "name": "dev_ops_project",
  "version": "1.0.0",
  "description": "This repository contains my **DevOps project**, created while following a hands-on DevOps crash course.  \r The goal of this project is to **learn and apply core DevOps concepts** by working with a full-stack application and automating development, deployment, and operations workflows.",
  "main": "index.js",
  "imports": {
    "#config/*.js": "./src/config/*.js",
    "#controllers/*.js": "./src/controllers/*.js",
    "#middleware/*.js": "./src/middleware/*.js",
    "#models/*.js": "./src/models/*.js",
    "#routes/*.js": "./src/routes/*.js",
    "#services/*.js": "./src/services/*.js",
    "#utils/*.js": "./src/utils/*.js",
    "#validations/*.js": "./src/validations/*.js"
  },
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "docker:dev": "node scripts/docker-dev.js",
    "docker:stop": "docker compose -f docker-compose.dev.yml down",
    "docker:prod":"node scripts/docker-prod.js",
    "docker:prod:stop":"docker compose -f docker-compose.prod.yml down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mohau-Comfort/Dev_Ops_Project.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Mohau-Comfort/Dev_Ops_Project/issues"
  },
  "homepage": "https://github.com/Mohau-Comfort/Dev_Ops_Project#readme",
  "dependencies": {
    "@arcjet/inspect": "^1.0.0",
    "@arcjet/node": "^1.0.0",
    "@neondatabase/serverless": "^1.0.2",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1"
  }
}
